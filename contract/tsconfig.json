{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": [
    "./hardhat.config.ts",
    "./scripts/**/*.ts",
    "./test/**/*.ts",
    "./typechain-types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
